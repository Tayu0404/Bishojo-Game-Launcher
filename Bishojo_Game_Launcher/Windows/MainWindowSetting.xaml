<UserControl x:Class="BishojoGameLauncher.Windows.MainWindowSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:properties="clr-namespace:BishojoGameLauncher.Properties"
			 xmlns:local="clr-namespace:BishojoGameLauncher.Windows"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1280">

	<Grid Margin="5, 0, 5, 0">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="350"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="350"/>
		</Grid.ColumnDefinitions>
		<ListBox
			x:Name="Settings"
			FontSize="25"
			Style="{DynamicResource DefaultListBoxStyle}"
			ItemContainerStyle="{DynamicResource DefaultListBoxItemStyle}">
			<ListBoxItem Content="{x:Static properties:Resources.Network}"/>
		</ListBox>
		<Grid Grid.Column="1">
			<local:MainWindowSettingNetwork/>
		</Grid>
	</Grid>
</UserControl>
